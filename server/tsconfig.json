{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "target": "es2016",
      /* Modules */
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      /* Type Checking */
      "strict": true,
      "skipLibCheck": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "include": [
      "src/**/*"
    ]
}
